<section class="py-12 py-md-16 py-lg-24 bg-primary">
  <div class="container ps-3 ps-md-5">
    <div class="row">
      <div class="col-lg-4 mb-8 mb-lg-0">
        <div>
          <h3 class="font-heading text-white mb-6"><%= data.content.faq.title %></h3>
          <div class="mw-sm mt-12">
            <p class="text-primary-light mb-0">Still have more questions?</p>
            <p class="text-primary-light mb-6">Talk to our customer happiness team</p>
            <div class="d-inline-block bg-white rounded-pill">
              <a class="btn btn-sm btn-outline-light text-dark" href="#">
                <svg width="20" height="20" viewbox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M13.3333 1.66675H6.66663C3.33329 1.66675 1.66663 3.33341 1.66663 6.66675V17.5001C1.66663 17.9584 2.04163 18.3334 2.49996 18.3334H13.3333C16.6666 18.3334 18.3333 16.6667 18.3333 13.3334V6.66675C18.3333 3.33341 16.6666 1.66675 13.3333 1.66675ZM11.6666 12.7084H5.83329C5.49163 12.7084 5.20829 12.4251 5.20829 12.0834C5.20829 11.7417 5.49163 11.4584 5.83329 11.4584H11.6666C12.0083 11.4584 12.2916 11.7417 12.2916 12.0834C12.2916 12.4251 12.0083 12.7084 11.6666 12.7084ZM14.1666 8.54175H5.83329C5.49163 8.54175 5.20829 8.25842 5.20829 7.91675C5.20829 7.57508 5.49163 7.29175 5.83329 7.29175H14.1666C14.5083 7.29175 14.7916 7.57508 14.7916 7.91675C14.7916 8.25842 14.5083 8.54175 14.1666 8.54175Z" fill="#A3A3A3"></path>
                </svg>
                <span class="ms-2"><%= data.config.keyword_1.sample %></span>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="mw-3xl mx-auto">
          <% data.content.faq.keys.reject { |key| key == "title" }.each_with_index do |item, index| %>
            <div class="accordion mb-3" id="accordion-<%= index %>">
              <div class="accordion-item">
                <h2 class="accordion-header" id="heading-<%= index %>">
                  <button class="accordion-button btn btn-link border-0 border-bottom border-info mb-3 px-0 py-6 d-flex w-100 justify-content-between align-items-center text-start rounded-0 collapsed text-white ps-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= index %>" aria-expanded="false" aria-controls="collapse-<%= index %>">
                    <span class="h5 mb-0 me-6"><%= data.content.faq[item].q %></span>
                    <svg class="flex-shrink-0" width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M19.5 8.25L12 15.75L4.5 8.25" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    </svg>
                  </button>
                </h2>
                <div id="collapse-<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading-<%= index %>" data-bs-parent="#accordion-<%= index %>">
                  <div class="accordion-body text-dark bg-white ps-3">
                    <%= data.content.faq[item].a %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var accordionButtons = document.querySelectorAll('.accordion-button');
    accordionButtons.forEach(function (button) {
      button.addEventListener('click', function () {
        var collapse = button.closest('.accordion-item').querySelector('.accordion-collapse');
        collapse.classList.toggle('show');
        button.classList.toggle('collapsed');
      });
    });
  });
</script>
