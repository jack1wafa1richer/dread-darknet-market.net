<% theme = data.config.html_theme %>
<% sections = data.config.sections %>
<% main = data.content.main %>
<% feedback = data.content.feedback %>
<% current_date = Time.now.strftime("%d %b %Y") %>
<section class="py-12 py-md-16 py-lg-24">
  <div class="container">
    <div class="mw-5xl mx-auto">
      <a class="d-inline-flex mb-14 align-items-center text-dark fw-bold" href="#"></a>
      <div class="row mb-16">
        <div class="col-md-6 col-lg-6 mb-12 mb-md-0">
          <div>
            <div class="d-flex flex-wrap align-items-center mb-n4">
              <div class="mx-3 mb-4 py-2 border-end"></div>
              <div class="mb-4">
                <span class="me-3 small text-light-dark"><%= current_date %></span>
                <svg width="4" height="4" viewbox="0 0 4 4" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="2" cy="2" r="2" fill="#D1D1D1"></circle></svg>
              </div>
            </div>
            <h3 class="font-heading mw-sm mt-4 mb-12"><%= main.title %></h3>
            <div class="d-flex align-items-center">
              <%= image_tag_with_srcset(class: "img-fluid rounded-circle", style: "width: 64px; height: 64px;", alt: data.config.keyword_2.sample) %>
              <div class="ms-4">
                <span class="d-block fw-semibold"><%= feedback.item_2.nikname %></span>
                <span class="text-light-dark fw-medium">Content Writer, Solstice</span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-6">
          <%= image_tag_with_srcset(class: "img-fluid h-100 d-block rounded-3", style: "object-fit: cover;", alt: data.config.keyword_2.sample) %>
        </div>
      </div>
      <div class="mw-4xl mx-auto">
        <% if main.part_1 %>
          <h3 class="font-heading mb-8"><%= main.part_1.subtitle %></h3>
          <p class="fs-5 fw-medium text-dark-light lh-lg"><%= main.part_1.article %></p>
        <% end %>
        <% if main.part_2 %>
          <h3 class="font-heading mb-8"><%= main.part_2.subtitle %></h3>
          <p class="fs-5 fw-medium text-dark-light lh-lg mb-8"><%= main.part_2.article %></p>
        <% end %>
        <% if main.part_3 %>
          <h3 class="font-heading mb-8"><%= main.part_3.subtitle %></h3>
          <p class="fs-5 fw-medium text-dark-light lh-lg mb-8"><%= main.part_3.article %></p>
        <% end %>
